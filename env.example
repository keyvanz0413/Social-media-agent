# ========== API Keys ==========
# 使用第三方 OpenAI 兼容 API 平台
OPENAI_API_KEY=your-api-key-here
OPENAI_BASE_URL=https://api.example.com/v1

# ========== MCP Server ==========
MCP_XIAOHONGSHU_URL=http://localhost:8001

# ========== 业务配置 ==========

# 评审通过阈值 (0-10分)
REVIEW_THRESHOLD=8.0

# 最大修改次数
MAX_REVISIONS=3

# 是否自动发布（建议设为 false，手动确认）
AUTO_PUBLISH=false

# ========== 开发配置 ==========

# 调试模式
DEBUG=false

# 详细日志
VERBOSE=false

# 模拟模式（不调用真实 API，用于测试）
MOCK_MODE=false

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

